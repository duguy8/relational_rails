<form action="/schools/<%= @school.id %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="PATCH" />
  <p>Edit</p>
  <label>Name: </label>
  <input type='text' name='school[name]' value="<%= @school.name %>"/><br/>
  <label>Address: </label>
  <input type='text' name='school[address]' value="<%= @school.address %>"/><br/>
  <label>City: </label>
  <input type='text' name='school[city]' value="<%= @school.city %>"/><br/>
  <label>State: </label>
  <input type='text' name='school[state]' value="<%= @school.state %>"/><br/>
  <label>Zipcode: </label>
  <input type='text' name='school[zipcode]' value="<%= @school.zipcode %>"/><br/>
  <label>Grade School?: </label>
  <input type='checkbox' name='school[gradeschool]' <%= @school.gradeschool ? 'checked' : '' %>/><br/>
  <input type='submit' value='Update School'/>
</form>
