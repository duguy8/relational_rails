<p><%= link_to "View All Schools", "/schools" %></p>
<p><%= link_to "View All Teachers", "/teachers" %></p>

<h3>Edit</h3>

<%= form_with url: "/schools/#{@school.id}", method: :patch, local: true do |form| %>
  <p><%= form.label "Name: " %></p>
  <p><%= form.text_field :name, value: "#{@school.name}" %></p><br>
  <p><%= form.label "Address: " %></p>
  <p><%= form.text_field :address, value: "#{@school.address}" %></p><br>
  <p><%= form.label "City: " %></p>
  <p><%= form.text_field :city, value: "#{@school.city}" %></p><br>
  <p><%= form.label "State: " %></p>
  <p><%= form.text_field :state, value: "#{@school.state}" %></p><br>
  <p><%= form.label "Zipcode: " %></p>
  <p><%= form.text_field :zipcode, value: "#{@school.zipcode}" %></p><br>
  <p><%= form.label "Grade School?: " %></p>
  <p><%= form.check_box :gradeschool, checked: @school.gradeschool %></p><br>
  <%= form.submit "Update School" %>
<% end %>
