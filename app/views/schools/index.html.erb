<h1>All Schools</h1>

<h4><a href="/schools/new">Create School</a></h4>

<% @schools.each do |school| %>
  <h3><a href="/schools/<%= school.id %>"><%= school.name %></a></h3>
  <h5>Created: <%= school.created_at %></h5>
  <p><%= link_to "Update School", "/schools/#{school.id}/edit" %></p>
  <p><%= link_to "Delete School", "/schools/#{school.id}", method: :delete %></p>
<% end %>
