<p><%= link_to "Home", "/" %></p>
<p><%= link_to "View All Schools", "/schools" %></p>
<p><%= link_to "View All Teachers", "/teachers" %></p>
<p><%= link_to "See Schools by Number of Employees", "/schools?sort=by_num_of_teachers" %></p>

<h4>Search for School by Name</h4>
<%= form_with url: "/schools", method: :get, local: true do |form| %>
  <%= form.text_field :search %>
  <%= form.submit "Search" %>
<% end %>

<h1>All Schools</h1>

<h4><a href="/schools/new">Create School</a></h4>

<% @schools.each do |school| %>
  <h3><a href="/schools/<%= school.id %>"><%= school.name %></a></h3>
  <h5>Employees: <%= school.teachers.count %></h5>
  <h5>Created: <%= school.created_at %></h5>
  <p><%= link_to "Update School", "/schools/#{school.id}/edit" %></p>
  <p><%= link_to "Delete School", "/schools/#{school.id}", method: :delete %></p>
<% end %>
