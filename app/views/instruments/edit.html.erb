<p><%= link_to "View All Dealers", "/dealers" %></p>
<p><%= link_to "View All Instruments", "/instruments" %></p>

<%= form_with(url: "/instruments/#{@instrument.id}", method: "patch", local: true) do %>
  <h3><%= label_tag ("Create New Instrument:") %></h3>
  <p><%= label_tag ("Name: ") %></p>
  <p><%= text_field_tag :name, "Enter Name" %></p><br>
  <p><%= label_tag ("On Sale?: ") %></p>
  <p><%= check_box_tag (:on_sale) %></p><br>
  <p><%= label_tag ("Brand: ") %></p>
  <p><%= text_field_tag :brand, "Enter Brand" %></p><br>
  <p><%= label_tag ("Price: ") %></p>
  <p><%= text_field_tag :price, "Enter Price" %></p><br>

  <%= submit_tag ("Update Instrument") %>
<% end %>
