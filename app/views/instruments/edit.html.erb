<p><%= link_to "View All Dealers", "/dealers" %></p>
<p><%= link_to "View All Instruments", "/instruments" %></p>

<form action="/instruments/<%= @instrument.id %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="PATCH" />
  <p>Edit</p>
  <label>Name: </label>
    <input type='text' name='instrument[name]' value="<%= @instrument.name %>"/><br/>
  <label>On Sale?: </label>
    <input type='checkbox' name='instrument[on_sale]' <%= @instrument.on_sale ? 'checked' : '' %>/><br/>
  <label>Brand: </label>
    <input type='text' name='instrument[brand]' value="<%= @instrument.brand %>"/><br/>
  <label>Price: </label>
    <input type='text' name='instrument[price]' value="<%= @instrument.price %>"/><br/>
    <input type='submit' value='Update Instrument'/>
</form>
